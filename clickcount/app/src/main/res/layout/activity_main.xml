<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp" >

    <Button
        android:id="@+id/button"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:text="@string/button"
        android:onClick="increase" />
    <TextView
        android:id="@+id/button_count"
        android:layout_below="@+id/button"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/button_count"
        android:layout_margin="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/countOutput"
        android:layout_below="@+id/button"
        android:layout_toRightOf="@+id/button_count"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initialCount"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/background_count"
        android:layout_below="@+id/countOutput"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/background_count"
        android:layout_margin="5dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
    <TextView
        android:id="@+id/countOutputBg"
        android:layout_below="@+id/countOutput"
        android:layout_toRightOf="@+id/background_count"
        android:layout_margin="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/initialCountBg"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        />
</RelativeLayout>